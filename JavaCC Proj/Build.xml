<?xml version="1.0" encoding="UTF-8"?>
<project default="run" name="Javacc makefile">
	<echo />

	<target name="clean">
		<delete dir="bin" />
	</target>

	<target name="run" depends="compile">
		<java fork="true" failonerror="yes" classname="Window">
			<classpath path="bin" />
		</java>
	</target>

	<target name="compile">
		<jjtree target="src/CNFParser.jjt" outputdirectory="src/parser"
			javacchome="C:\javacc-5.0" nodeusesparser="true" />
		<javacc target="src/CNFParser.jjt" outputdirectory="src/parser"
			javacchome="C:\javacc-5.0" static="true" />
	</target>
</project>